<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel='stylesheet' href='/stylesheets/index.css'>
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script src="/javascripts/blog.js"></script>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=alJ4KBOXEX">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=XByepA3gzz">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=XByepA3gzz">
    <link rel="manifest" href="/site.webmanifest">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#22f7c7">
    <meta name="msapplication-TileColor" content="#22f7c7">
    <meta name="theme-color" content="#ffffff">

    <meta property="og:title" content="<%- post['title']['rendered'] %>">
    <meta property="og:description" content="<%- post['excerpt']['rendered'] %>">
    <meta property="og:image" content="/social_image.png">
    <meta name="twitter:image" content="/social_image.png">
    <% const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]; %>
</head>

<body>
<%- include('partials/navbar') %>
<section class="hero is-small is-primary is-bold">
    <div class="hero-body">
        <div class="container has-text-centered">
            <a href="/blog">
                <h1 class="title is-3">
                    <%= title %>
                </h1>
            </a>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div class="tile is-ancestor">
            <div class="tile is-parent is-vertical">
                <article class="tile is-child box">
                    <p class="title is-3"><%- post['title']['rendered'] %></p>
                    <p class="subtitle is-5">By Alex Baratti</p>
                    <% let date = new Date(Date.parse(post['date'])) %>
                    <p class="subtitle is-6"><%= months[date.getMonth()]; %> <%= date.getDate() %>, <%= date.getFullYear() %></p>
                    <div class="content">
                        <%- post['content']['rendered'] %>
                    </div>
                </article>
            </div>
        </div>
    </div>
</section>
<%- include('partials/footer') %>
</body>
</html>
